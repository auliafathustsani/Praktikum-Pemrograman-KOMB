#include <iostream>
using namespace std;

int main(){
    int a, b, c, hasil, bilangan_terbesar;
    
    cout<<"Inputkan bilangan 1 : ";
    cin>> a;
    cout<<"Inputkan bilangan 2 : ";
    cin>> b;
    cout<<"Inputkan bilangan 3 : ";
    cin>> c;
    
    if (a>b && a>c){
        hasil = 1;
    } else if (b>a && b>c) {
        hasil = 2;
    } else if (c>a && c>b){
        hasil = 3;
    }
    
    switch(hasil){
        case 1:
            bilangan_terbesar = a;
            break;
        case 2:
            bilangan_terbesar = b;
            break;
        case 3:
            bilangan_terbesar = c;
            break;
        default:
            cout << "Terjadi kesalahan dalam perhitungan." << endl;
    }    
    
    cout << "Bilangan terbesar adalah : " << bilangan_terbesar << endl;
    
    
    return 0;
    
}
